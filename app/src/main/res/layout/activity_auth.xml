<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:id="@+id/linear_layout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lightYellow"
        android:elevation="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_10sdp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please fill the below form and select a profile picture by tapping on the circle inorder to be a donor"
        android:textSize="@dimen/_11ssp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:textColor="@android:color/black"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_below="@id/linear_layout_text"
        android:layout_width="@dimen/_116sdp"
        android:layout_height="@dimen/_116sdp"
        android:src="@drawable/user"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/lightYellow"
        app:civ_fill_color="@android:color/white"
        android:elevation="@dimen/_8sdp"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:focusable="true" />
    <android.support.v7.widget.CardView
        android:id="@+id/cardView_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:elevation="@dimen/_8sdp"        >
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_15sdp"
            android:padding="@dimen/_15sdp">
            <EditText
                android:id="@+id/donor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="@dimen/_3sdp"
                android:inputType="textPersonName"/>
            <EditText
                android:id="@+id/donor_email"
                android:layout_below="@id/donor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="@dimen/_3sdp"
                android:inputType="textEmailAddress"/>
            <EditText
                android:id="@+id/donor_password"
                android:layout_below="@id/donor_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                android:drawablePadding="@dimen/_3sdp"
                android:inputType="textPassword"/>
            <EditText
                android:id="@+id/donor_number"
                android:layout_below="@id/donor_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                android:drawablePadding="@dimen/_3sdp"
                android:inputType="number"/>
            <TextView
                android:id="@+id/donor_location"
                android:layout_below="@id/donor_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/address"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_14ssp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="@dimen/_3sdp"/>

            <LinearLayout
                android:id="@+id/linear_location_spinners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_below="@id/donor_location"
                android:weightSum="2">
                <Spinner
                    android:id="@+id/spinner_area_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/donor_location"
                    />

                <Spinner
                    android:id="@+id/spinner_city_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/spinner_area_name"
                    android:layout_below="@id/donor_location" />
            </LinearLayout>


            <TextView
                android:id="@+id/txt_blood_group"
                android:layout_below="@id/linear_location_spinners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group :"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_14ssp"
                android:drawableLeft="@drawable/app_icon"
                android:drawablePadding="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <Spinner
                android:id="@+id/spinner_blood_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txt_blood_group"
                android:layout_alignTop="@id/txt_blood_group" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_below="@+id/cardView_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightYellow"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:elevation="@dimen/_8sdp">
        <Button
            android:id="@+id/btn_make_donor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make me a donor"
            android:textSize="@dimen/_14ssp"
            android:background="#00000000"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp_1"/>
    </RelativeLayout>
</RelativeLayout>