<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity"
    android:background="@color/colorPrimary"
    android:paddingRight="@dimen/_10sdp"
    android:paddingLeft="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <android.support.v7.widget.CardView
            android:id="@+id/card_button_donate"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:backgroundTint="@color/lightYellow"
            android:elevation="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_25sdp">
            <Button
                android:id="@+id/btn_donate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00000000"
                android:text="@string/donate_blood"
                android:textSize="@dimen/_18ssp"
                android:textColor="@android:color/black"
                android:textAllCaps="false"
                android:padding="@dimen/_15sdp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_below="@id/card_button_donate"
            android:layout_alignEnd="@id/card_button_donate"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightYellow"
            android:elevation="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_25sdp">
            <Button
                android:id="@+id/btn_donor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00000000"
                android:text="@string/need_donor"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_18ssp"
                android:textAllCaps="false"
                android:padding="@dimen/_15sdp"/>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>