<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/colorPrimary"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cardView_form_login"
        android:layout_above="@+id/layout_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:elevation="@dimen/_8sdp">
        <RelativeLayout
            android:id="@+id/layout_login_credentials"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_15sdp"
            android:padding="@dimen/_15sdp">
            <EditText
                android:id="@+id/donor_login_email"
                android:layout_below="@id/donor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="@dimen/_3sdp"
                android:inputType="textEmailAddress"/>
            <EditText
                android:id="@+id/donor_login_password"
                android:layout_below="@id/donor_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                android:drawablePadding="@dimen/_3sdp"
                android:inputType="textPassword" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
        <RelativeLayout
            android:id="@+id/layout_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightYellow"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:elevation="@dimen/_8sdp"
            android:layout_centerInParent="true">
            <Button
                android:id="@+id/btn_login_donor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#00000000"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp_1"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textSize="@dimen/_14ssp" />
        </RelativeLayout>
    <TextView
        android:id="@+id/txt_no_account"
        android:layout_below="@id/layout_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account ??"
        android:textColor="@color/antiqueWhite"
        android:textSize="@dimen/_18ssp"
        android:textStyle="italic"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/txt_forgot_password"
        android:layout_below="@id/txt_no_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password ?"
        android:textColor="@color/lightYellow"
        android:textSize="@dimen/_15ssp"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:clickable="true"/>

</RelativeLayout>