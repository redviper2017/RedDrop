<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorRequestActivity"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:id="@+id/linear_layout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lightYellow"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:elevation="@dimen/_8sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please fill up the below form inorder to search for donors:"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_14ssp"
            android:padding="@dimen/_10sdp"
            android:textColor="@android:color/black"/>
            <!--android:textStyle="bold"/>-->
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/cardView_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_text"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:elevation="@dimen/_8sdp"        >
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_15sdp"
                android:padding="@dimen/_15sdp">
                <EditText
                    android:id="@+id/contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact Person's Name"/>
                <EditText
                    android:id="@+id/contact_number"
                    android:layout_below="@id/contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact Number"
                    android:inputType="phone"/>
                <EditText
                    android:id="@+id/contact_location"
                    android:layout_below="@id/contact_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name of the Hospital, Area"/>
                <Spinner
                    android:id="@+id/spinner_unitsRequired"
                    android:layout_below="@id/contact_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:prompt="@string/select_no_units"
                    android:spinnerMode="dropdown"/>
                <Spinner
                    android:id="@+id/spinner_bloodGroup"
                    android:layout_below="@id/spinner_unitsRequired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:prompt="@string/select_blood_group"
                    android:spinnerMode="dropdown"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_below="@+id/cardView_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightYellow"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:elevation="@dimen/_8sdp">
        <Button
            android:id="@+id/btn_search_donor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="@dimen/_14ssp"
            android:background="#00000000"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"/>
        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_30sdp"/>
        </RelativeLayout>


</RelativeLayout>